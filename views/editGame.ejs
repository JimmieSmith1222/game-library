<h1>Edit Game</h1>

<form action="/games/<%= game._id %>?_method=PUT" method="post">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= game.title %>" required>

  <label for="developer">Developer:</label>
  <input type="text" id="developer" name="developer" value="<%= game.developer %>" required>

  <label for="releaseDate">Release Date:</label>
  <input type="date" id="releaseDate" name="releaseDate" value="<%= game.releaseDate %>" required>

  <label for="genre">Genre:</label>
  <input type="text" id="genre" name="genre" value="<%= game.genre %>" required>

  <label for="description">Description:</label>
  <textarea id="description" name="description" required><%= game.description %></textarea>

  <button type="submit">Update Game</button>
</form>